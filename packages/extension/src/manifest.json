{
  "background": { "service_worker": "background.mjs", "type": "module" },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["index.global.js"],
      "matches": ["*://*.claude.ai/*", "*://localhost/*"],
      "run_at": "document_idle"
    }
  ],
  "description": "Automatically clicks 'Allow for this chat' button in modal dialogs and notifies when responses are complete",
  "host_permissions": ["*://*.claude.ai/*", "*://localhost/*"],
  "icons": { "128": "images/icon128.png" },
  "manifest_version": 3,
  "name": "Sublime Claude Modal Auto-Clicker",
  "permissions": ["scripting", "activeTab", "tabs", "notifications"],
  "version": "0.1.0"
}
