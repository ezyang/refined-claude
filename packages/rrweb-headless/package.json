{
  "name": "@sublime-claude/rrweb-headless",
  "version": "0.1.0",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "test-rrweb": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts src/cli.ts --dts --format esm,cjs --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test-replay": "node dist/cli.js",
    "test-replay:debug": "node dist/cli.js --headful --timeout 0"
  },
  "dependencies": {
    "playwright": "^1.41.0",
    "rrweb": "^2.0.0-alpha.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
