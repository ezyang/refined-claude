{
  "name": "@sublime-claude/rrweb-headless",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "test-rrweb": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup --config tsup.config.ts",
    "dev": "tsup --config tsup.config.ts --watch",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:verbose": "vitest run --reporter verbose",
    "test:e2e": "vitest run --config vitest.e2e.config.ts",
    "test-replay": "tsx src/cli.ts",
    "test-replay:debug": "tsx src/cli.ts --headful --timeout 0",
    "test-replay:devtools": "SUBLIME_DEBUG=1 tsx src/cli.ts"
  },
  "dependencies": {
    "@sublime-claude/extension": "0.1.0",
    "playwright": "^1.41.0",
    "rrweb": "^2.0.0-alpha.4",
    "rrweb-player": "^1.0.0-alpha.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "tsup": "^8.0.1",
    "tsx": "^4.19.3",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
